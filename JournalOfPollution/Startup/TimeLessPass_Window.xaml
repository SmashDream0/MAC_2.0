<Window x:Class="MAC_2.TimeLessPass_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="120" 
        Width="300"
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox
            x:Name="Pass_Box"
            Grid.Row="1" 
            HorizontalAlignment="Center" 
            Margin="5,0,5,0" 
            Width="200" >
        </TextBox>
        <Button
            Content="Продолжить"
            x:Name="Continue_button"
            Height="35"
            Width="120"
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            Grid.Row="2"
            FontSize="14" 
            FontWeight="Medium"
            Click="Continue_button_Click">
        </Button>
        <Button
            Content="Отмена"
            x:Name="Cancel_button"
            Height="35"
            Width="120"
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            Grid.Row="2"
            FontSize="14" 
            FontWeight="Medium"
            Click="Cancel_button_Click">
        </Button>
    </Grid>
</Window>
